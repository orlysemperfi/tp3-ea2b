    <div id="ModalMensajeError" class="j_modal" title="Mensaje"></div>
    </div>
        @*@Scripts.Render("~/bundles/jquery")*@
        @Scripts.Render("~/bundles/jqueryui")
        @Scripts.Render("~/bundles/jquerypri")
        @Scripts.Render("~/bundles/jqueryval")
