            </div>
            <div class="loginDisplay">
                Pantalla de bienvenida <span class="bold"><asp:LoginName ID="HeadLoginName" runat="server" /> Grupo 5 </span>!
                <a href="#" >Cerrar sesión</a>
            </div>
            <div class="clear hideSkiplink">
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                        <li>@Html.ActionLink("Plan", "PlanConsulta", "Plan")</li>
                        <li>@Html.ActionLink("Equipo", "Index", "Equipo")</li>
                        <li>@Html.ActionLink("Solicitud", "SolicitudConsulta", "Solicitud")</li>
                            <li>@Html.ActionLink("Orden de Trabajo", "OrdenTrabajoConsulta", "OrdenTrabajo")</li>
                            <li>@Html.ActionLink("Especialidad", "RedirectEspecialidad", "Solicitud")</li>
                            <li>@Html.ActionLink("Informe", "RedirectInforme", "Solicitud")</li>
                             
                        @* <li>@Html.ActionLink("Información", "About", "Home")</li>
                        <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>*@
                    </ul>
                    @*  <a href="http://localhost:1051/MantEmpleado/frmMantEmpleado.aspx"> Empleado Especialidad</a>
                    <a href="http://localhost:1051/MantInforme/frmMantInforme.aspx"> Empleado Especialidad</a>*@
                </nav>
            </div>
            
        </div>
        <div id="main">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <div class="clear">
         </div>
         <div class="footer">
        
            <table class="footer">
                <tr>
                    <td>
                        <h5 > TMD S.A. </h5>
                    </td>
                    <td>
                        <h5 > (C) Copyright 2012-2013 </h5>
                    </td>
                </tr>
            </table>
        
        </div> 
        
        <div class="divLoadingMensaje" >
        <strong>
            <img src="@Url.Content("~/Images/ajax-loader.gif")" alt="Procesando..."/>
             Procesando...
        </strong>        
        </div> 
