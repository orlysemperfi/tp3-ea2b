@model TMD.GM.Site.Models.PlanModel
@{ WebGrid grid = new WebGrid(Model.listaDetalle, canPage: false, canSort: false);}
 @grid.GetHtml(
    columns: grid.Columns(
    grid.Column("ITEM_ACTIVIDAD", "Item", canSort: false, style: "width:50"),
    grid.Column("DESCRIPCION_TIPO_ACTIVIDAD", "Tipo",  style: "width:100"),
    grid.Column("DESCRIPCION_ACTIVIDAD", "Descripción" ),
    grid.Column("PRIORIDAD_ACTIVIDAD", "Prioridad"),
    grid.Column("DESCRIPCION_FRECUENCIA", "Frecuencia"),
    grid.Column("PERSONAL_REQUERIDO", "Personal"),
    grid.Column("TIEMPO_ACTIVIDAD", "Tiempo"),
    grid.Column("DESCRIPCION_TIEMPO", "Medida"),
    grid.Column("", "", format: @<text><a href="#" onclick="PlanActividadEditar('@Url.Action("PlanActividad_Editar", "Plan")','@item.GUID_ROW.ToString()');">Editar</a></text>),
    grid.Column("", "", format: @<text><a href="#" onclick="PlanActividadEliminar('@Url.Action("PlanActividades_Eliminar", "Plan")','@Url.Action("PlanActividades", "Plan")','@item.GUID_ROW.ToString()');">Eliminar</a></text>)
         )
        )
    