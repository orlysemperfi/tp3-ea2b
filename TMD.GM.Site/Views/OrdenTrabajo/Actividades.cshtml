@model TMD.GM.Site.Models.OrdenTrabajoModel
@{ WebGrid grid = new WebGrid(Model.entity.listaActividades, canPage: false, canSort: false);}
 @grid.GetHtml(htmlAttributes: new { id = "tableActividades" },
    columns: grid.Columns(
    grid.Column("ITEM_ORDEN", "Item"),
    grid.Column("DESCRIPCION_TIPO_ACTIVIDAD", "Tipo"),
    grid.Column("DESCRIPCION_ACTIVIDAD", "Actividad" ),
    grid.Column("FECHA_PROGRAMADA", "F. programada", format: @<text>@TMD.GM.Util.DataUT.ObjectToDateTimeStringNull(item.FECHA_PROGRAMADA, "dd/MM/yyyy")</text>),
    grid.Column("FECHA_INICIO_ACTIVIDAD", "Inicio Atención"),
    grid.Column("FECHA_FIN_ACTIVIDAD", "Fin Atención"),
    grid.Column("RESULTADO_ATENCION", "Resultado"),
    grid.Column("OPCIONES", "Opciones", format: @<text>
        <a class="k-button k-button-icontext k-grid-edit" href="#" onclick="OTActividad_Editar('@Url.Action("Actividad_Editar", "OrdenTrabajo")','@item.GUID_ROW.ToString()');"><span class="k-icon k-edit"></span></a>
        <a class="k-button k-button-icontext k-grid-delete" href="#" onclick="OTActividad_Eliminar('@Url.Action("Actividades_Eliminar", "OrdenTrabajo")','@Url.Action("PlanActividades", "OrdenTrabajo")','@item.GUID_ROW.ToString()');"><span class="k-icon k-delete"></span></a>
        </text>)
         )
        )
<script language="javascript" type="text/javascript">
    $(document).ready(function () {
        $("#tableActividades").kendoGrid({
            height: 250,
            columns: [
            { field: "ITEM_ACTIVIDAD", title: "Item", width: "30px" },
            { field: "DESCRIPCION_TIPO_ACTIVIDAD", title: "Tipo", width: "50px" },
            { field: "DESCRIPCION_ACTIVIDAD", title: "Descripción", width: "150px" },
            { field: "FECHA_PROGRAMADA", title: "F. programada", width: "50px" },
            { field: "FECHA_INICIO_ACTIVIDAD", title: "Inicio Atención", width: "100px" },
            { field: "FECHA_FIN_ACTIVIDAD", title: "Fin Atención", width: "100px" },
            { field: "RESULTADO_ATENCION", title: "Resultado", width: "50px" },
           { field: "OPCIONES", title: "Opciones", width: "50px" }
            ]
        });
    });
    
</script>